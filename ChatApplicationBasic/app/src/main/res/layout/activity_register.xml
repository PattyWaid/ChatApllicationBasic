<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.prathamesh.splashscreen.Register"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/my_outbox_style">


    <EditText
        android:id="@+id/email_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:hint="Email-Id"
        android:background="@drawable/my_textbox_style"
        android:alpha="0.7"/>
    <EditText
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:alpha="0.7"
        android:hint="Name"
        android:background="@drawable/my_textbox_style"/>
    <EditText
        android:id="@+id/set_pass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:alpha="0.7"
        android:hint="Password"
        android:background="@drawable/my_textbox_style"/>

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <Button
        android:id="@+id/register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register"
        android:layout_marginTop="30dp"
        android:onClick="signUpClicked"
        android:background="@drawable/my_button_style"/>
    <Button
        android:id="@+id/login_direct"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp"
        android:onClick="logInClicked"
        android:background="@drawable/my_button_style"/>
</LinearLayout>

  </LinearLayout>

